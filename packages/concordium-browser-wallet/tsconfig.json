{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "noEmit": true,
        "jsx": "react",
        "paths": {
            "@popup/*": ["./src/popup/*"],
            "@background/*": ["./src/background/*"],
            "@content/*": ["./src/content/*"],
            "@shared/*": ["./src/*"],
            "@root/*": ["./*"],
            "@concordium/wallet-message-hub/*": [
                "../../packages/concordium-wallet-message-hub/src/*"
            ]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["./**/*"]
}
