{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "noEmit": true,
        "jsx": "react",
        "paths": {
            "@popup/*": ["./src/popup/*"],
            "@background/*": ["./src/background/*"],
            "@content/*": ["./src/content/*"],
            "@inject/*": ["./src/inject/*"],
            "@shared/*": ["./src/shared/*"],
            "@assets/*": ["./src/assets/*"],
            "@concordium/browser-wallet-api": ["./src/wallet-api/index.ts"],
            "@concordium/browser-wallet-api/*": ["./src/wallet-api/*"],
            "@concordium/browser-wallet-message-hub": ["./src/messaging/index.ts"],
            "@concordium/browser-wallet-api-helpers": ["../browser-wallet-api-helpers/src"],
            "wallet-common-helpers": ["./src/wallet-common-helpers"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "test/compatibility.test.ts"],
    "exclude": ["./../../node_modules/**/*", "./dist/**/*"],
    "files": ["../browser-wallet-api-helpers/src/extend-window.ts"]
}
