{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "noEmit": true,
        "jsx": "react",
        "paths": {
            "@popup/*": ["./src/popup/*"],
            "@background/*": ["./src/background/*"],
            "@content/*": ["./src/content/*"],
            "@inject/*": ["./src/inject/*"],
            "@shared/*": ["./src/shared/*"],
            "@assets/*": ["./src/assets/*"],
            "@concordium/browser-wallet-api": ["../../packages/browser-wallet-api/src"],
            "@concordium/browser-wallet-message-hub": ["../../packages/browser-wallet-message-hub/src"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["./**/*", "../../node_modules/@concordium/browser-wallet-api-types/extend-window.d.ts"]
}
